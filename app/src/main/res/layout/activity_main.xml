<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/principale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cerca prodotto"
            android:textAlignment="center"
            android:drawableStart="@drawable/baseline_search_black_18"
            android:drawablePadding="5dp"
            android:id="@+id/prodotto_et"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bicicletta"
            android:id="@+id/bicicletta_tv"/>

        <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Vai al prodotto"
           android:id="@+id/prodotto_btn"/>

    </LinearLayout>

</LinearLayout>
